---
export const LINKS = [
  {name: 'Blog', to: '/blog'},
  {name: 'Projects', to: '/projects'},
  {name: 'About', to: '/about'},
]
---

<div class='flex justify-between mt-9 py-4 px-10'>
  <h1 class='logo'>Soham Sarkar</h1>

  <div class='flex items-center gap-8'>
    {
      LINKS.map(link => (
        <a
          href={link.to}
          class='block font-semibold whitespace-nowrap text-lg focus:outline-none underlined'
        >
          {link.name}
        </a>
      ))
    }
  </div>
</div>

<style>
  .logo {
    font-weight: 700;
    font-size: 1.375rem;
    letter-spacing: -0.03em;
  }

  .underlined {
    position: relative;
    text-decoration: none !important;
  }

  .underlined:after {
    bottom: -4px;
    content: '';
    display: block;
    height: 2px;
    left: 0;
    position: absolute;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.25s ease;
    width: 100%;
  }

  .underlined:focus {
    outline: none;
    text-decoration: none !important;
  }

  .underlined:hover:after,
  .underlined:focus:after,
  .active.underlined:after {
    background-color: currentColor;
    transform: scaleX(1);
  }

  @media (prefers-reduced-motion) {
    .underlined:after {
      opacity: 0;
      transition: opacity 0.25s ease;
    }

    .underlined:hover:after,
    .underlined:focus:after,
    .active.underlined:after {
      opacity: 1;
    }
  }
</style>
