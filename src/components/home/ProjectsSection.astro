---
import Button from '../Button.astro'
import Project from './Project.astro'

const projects = [
  {
    title: 'Personal Finance App',
    description:
      'Track expenses, set budgets, and achieve financial goals with this comprehensive tool.',
    link: '#',
    image: '/projects/personal-finance-app.jpg',
    tags: ['React', 'Node.js', 'MongoDB'],
  },
  {
    title: 'Mentorship Platform',
    description: 'Connect mentors and mentees in the tech industry efficiently.',
    link: '#',
    image: '/path-to-mentorship-platform-image.jpg',
    tags: ['Vue.js', 'Express', 'PostgreSQL'],
  },
  {
    title: 'AI Resume Analyzer',
    description: 'Get personalized feedback on your resume using advanced AI.',
    link: '#',
    image: '/path-to-resume-analyzer-image.jpg',
    tags: ['Python', 'TensorFlow', 'Flask'],
  },
]
---

<section class='projects-section'>
  <div class='projects-header'>
    <h2>Digital Backyard</h2>
    <Button href='/projects'>View all projects â†’</Button>
  </div>

  <div class='projects-container'>
    {
      projects.map(project => (
        <Project
          title={project.title}
          description={project.description}
          link={project.link}
          image={project.image}
          tags={project.tags}
        />
      ))
    }
  </div>
</section>

<style>
  .projects-section {
    padding: 60px 0;
  }

  .projects-header {
    margin-bottom: 32px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .projects-header h2 {
    color: #fff;
    font-family: 'Victor Mono', monospace;
    font-size: 3.5rem;
    font-style: italic;
    font-weight: 400;
    line-height: 100%;
    letter-spacing: -0.28rem;
  }

  .projects-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
  }

  @media (max-width: 768px) {
    .projects-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
    }
  }
</style>
