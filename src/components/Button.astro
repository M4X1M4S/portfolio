---
export interface Props {
  variant?: 'primary' | 'secondary'
  href?: string
  disabled?: boolean
}

const props = Astro.props
---

<a
  href={props.href ?? '#'}
  class={`button ${props.variant === 'secondary' ? 'button-secondary' : 'button-primary'} ${props.disabled ? 'button-disabled' : ''}`}
  role='button'
  tabindex={props.disabled ? -1 : 0}
  aria-disabled={props.disabled ? 'true' : 'false'}
>
  <slot />
</a>

<style>
  .button {
    display: inline-flex;
    padding: 16px 24px;
    justify-content: center;
    align-items: center;
    gap: 8px;
    border-radius: 40px;
    font-family: 'Victor Mono';
    font-size: 1.25rem;
    font-style: normal;
    font-weight: 400;
    line-height: 100%; /* 1.25rem */
    letter-spacing: -0.1rem;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .button-primary {
    border: 1px solid rgba(255, 255, 255, 0.6);
    background: radial-gradient(
      91.79% 82.82% at 49.42% 50%,
      rgba(255, 255, 255, 0.3) 0%,
      rgba(0, 0, 0, 0.3) 100%
    );
    box-shadow: 0px 0px 24px 0px rgba(255, 255, 255, 0.34);
    color: #fff;

    border: 1px solid rgba(255, 255, 255, 0.4);
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0.3) -67.31%,
      rgba(0, 0, 0, 0.3) -46.54%
    );
    box-shadow: 0px 0px 24px 0px rgba(255, 255, 255, 0.34);
  }

  .button-primary:hover {
    background: #fff;
    box-shadow: 0px 0px 24px 0px rgba(255, 255, 255, 0.54);
    color: #000;
  }

  .button-secondary {
    border-radius: 40px;
    border: 1px solid rgba(255, 255, 255, 0.6);
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0.3) -67.31%,
      rgba(0, 0, 0, 0.3) 146.15%
    );
    box-shadow: 0px 0px 24px 0px rgba(255, 255, 255, 0.34);
    color: #fff;
  }

  .button-secondary:hover {
    border-radius: 40px;
    border: 1px solid rgba(255, 255, 255, 0.4);
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0.3) -67.31%,
      rgba(0, 0, 0, 0.3) -46.54%
    );
    box-shadow: 0px 0px 24px 0px rgba(255, 255, 255, 0.34);
  }

  .button-disabled {
    cursor: not-allowed;
    opacity: 0.6;
    pointer-events: none;
  }
</style>
